<%-include("./partials/header.ejs")%>

<% if (locals.postId) { %>
<div class="font-fam text-center">
    <h1 class="mb-4">Edit Post</h1>
    <form action="/update" method ="post" class="d-inline-block w-50">

        <div class="form-group">
            <input class="form-control mb-4 text-center" type="text" name="title" placeholder="Title" value="<%= title %>" required>
        </div>

        <div class="form-group">
            <textarea class="form-control mb-4" name="content" id="content" cols="30" rows="10" placeholder="Content"><%= content %></textarea>
        </div>

        <input hidden type="text" name="index" value="<%= postId %>">
        <div class="mb-4">
            <input type="submit" value="Update Post" class="btn btn-info">
        </div>

    </form>
</div>
<% } else { %> 
    <div class="font-fam text-center">
        <h1 class="mb-4">Create Post</h1>
        <form action="/save" method="post" class="d-inline-block w-50">
            <div class="form-group">
                <!-- <label for="title">Title</label> -->
                <input type="text" class="form-control mb-4 text-center" id="title" name="title" placeholder="Title" required>
            </div>
            <div class="form-group">
                <!-- <label for="content">Content</label> -->
                <textarea class="form-control mb-4 text-center" id="content" name="content" rows="10" placeholder="Content"></textarea>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary mb-4">Aply</button>
            </div>
        </form>
    </div>

<% } %>

<%-include("./partials/footer.ejs")%>

