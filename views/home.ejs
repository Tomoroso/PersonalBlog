<% if (posts.length === 0) { %>
    <div class="container text-center mb-4">
        <h3 class="h3">You have to type something..</h3>
    </div>
<% } else { %>
    <div class="container mb-4 rounded-lg">
        <ul class="list-group">
            <% posts.slice().reverse().forEach((post) => { %>
                <li class="list-group-item mb-2 rounded-lg">
                    <p><%= post.date %></p>
                    <h3><a href="/view/<%= posts.indexOf(post) %>"><%= post.title %></a></h3>
                    <p><%= post.content %></p>
                </li>
           <% }) %>
        </ul>
    </div>
<% } %>

